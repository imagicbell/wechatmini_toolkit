.container-view {
  height: 100%;
  font-size: 68rpx;
  background-color: cornflowerblue;
}

.text-view {
  position: relative;
  width: 100%;
  height: calc(100vh - 950rpx);
}

.text-input {
  position: absolute;
  bottom: 20rpx;
  width: calc(100% - 80rpx);
  text-align: right;
  margin: 10rpx 40rpx 20rpx 40rpx;
}

.input-view {
  position: relative;
  width: 100%;
  height: 950rpx;
}

.input-group {
  margin: 20rpx 20rpx 20rpx 20rpx;
  width: calc(100% - 40rpx);
  height: calc(100% - 40rpx);

  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.input-item {
  margin: 12rpx 12rpx 12rpx 12rpx;
  width: 152rpx;
  height: 152rpx;
  border-radius: 76rpx;
  
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.input-text {
  font-size: 60rpx;
  text-align: center;
}