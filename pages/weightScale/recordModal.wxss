/* pages/weightScale/recordModal.wxss */
.popup {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
}

.record-container {
  position: absolute;
  left: 50%;
  top: 50%;
 
  width: 80%;
  height: 450rpx;
  max-width: 600rpx;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  box-sizing: border-box;
  transform: translate(-50%, -50%); 
  overflow: hidden;
  background: #fff;

  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.record-content {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.date-row {
  margin: 80rpx 40rpx 0rpx 40rpx;
  width: calc(100% - 80rpx);
  height: 60rpx;
  border-bottom: 2rpx solid grey;
}

.weight-row {
  margin: 20rpx 40rpx 0rpx 40rpx;
  width: calc(100% - 80rpx);
  height: 60rpx;
  border-bottom: 2rpx solid grey;
}

.weight-input {
  text-align: right;
}

.button-row {
  margin: 80rpx 50rpx 0rpx 50rpx;
  width: calc(100% - 100rpx);
  height: 100rpx;
}

